	isbn = {0021-9258},
	issn = {15420086},
	journal = {Biophysical Journal},
	mendeley-groups = {Malaria},
	number = {4},
	pages = {846--853},
	pmid = {25140419},
	publisher = {Biophysical Society},
	title = {{Quantitation of malaria parasite-erythrocyte cell-cell interactions using optical tweezers}},
