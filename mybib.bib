	file = {:Users/guilherme/Desktop/malaria/2008 - Line Tensions, Correlation Lengths, and Critical Exponents in Lipid Membranes Near Critical Points.pdf:pdf},
	isbn = {0006-3495},
	issn = {15420086},
	journal = {Biophysical Journal},
	mendeley-groups = {Malaria},
	number = {1},
